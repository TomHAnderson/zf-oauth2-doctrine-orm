<?xml version="1.0"?>
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">
  <document name="ZF\OAuth2\Document\Client">
    <field name="id" id="true" type="integer"/>
    <field name="clientId" type="string"/>
    <field name="secret" type="string"/>
    <field name="redirectUri" type="string"/>
    <field name="grantType" type="string"/>
    <indexes>
      <index name="clientId_idx">
        <key name="clientId" order="asc"/>
      </index>
    </indexes>
    <reference-many field="accessToken" target-document="ZF\OAuth2\Document\AccessToken" mapped-by="client"/>
    <reference-many field="authorizationCode" target-document="ZF\OAuth2\Document\AuthorizationCode" mapped-by="client"/>
    <reference-many field="refreshToken" target-document="ZF\OAuth2\Document\RefreshToken" mapped-by="client"/>
    <reference-many field="jwt" target-document="ZF\OAuth2\Document\Jwt" mapped-by="client"/>
    <reference-many field="publicKey" target-document="ZF\OAuth2\Document\PublicKey" mapped-by="client"/>
    <reference-many field="jti" target-document="ZF\OAuth2\Document\Jti" mapped-by="client"/>
  </document>
</doctrine-mongo-mapping>
